<p id="notice"><%= notice %></p>

<h1>Theatre Movies</h1>

<table>
  <thead>
    <tr>
      <th>Theatre</th>
      <th>Movie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @theatre_movies.each do |theatre_movie| %>
      <tr>
        <td><%= theatre_movie.theatre.name %></td>
        <td><%= theatre_movie.movie.name %></td>
        <td><%= link_to 'Show', theatre_movie %></td>
        <td><%= link_to 'Edit', edit_theatre_movie_path(theatre_movie) %></td>
        <td><%= link_to 'Destroy', theatre_movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

